<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp">
            <TextView
                android:id="@+id/tvItemCommentsUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:gravity="left|top"
                android:textSize="@dimen/itemCommentsUser"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvItemCommentsScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5/5"
                android:gravity="center|top"
                android:textSize="@dimen/itemCommentsScore"
                android:textColor="@color/primaryTextColor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            tools:ignore="Suspicious0dp">

            <TextView
                android:id="@+id/tvItemCommentsComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuide su salud, cuide su alimentacion"
                android:gravity="left|top"
                android:textSize="@dimen/itemCommentsComment"
                android:textColor="@color/primaryTextColor"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>